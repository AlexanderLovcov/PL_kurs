<%= form_for @tour do |f| %>
  <div class=" form-control">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class=" form-control">
    <%= f.label :country %>
    <%= f.collection_select :country_id, @countries, :id, :name, include_blank: true %>
  </div>

  <div class=" form-control">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class=" form-control">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: 'datepicker' %>
  </div>

  <div class=" form-control">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: 'datepicker' %>
  </div>

  <div class=" form-control">
    <%= f.label :tourists_count %>
    <%= f.text_field :tourists_count %>
  </div>

  <%= f.submit %>

<% end %>
